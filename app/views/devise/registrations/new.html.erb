<div class="row">
  <div class="col-xs-2"></div>
  <div class="col-xs-8">
    <div class="panel panel-success">
      <div class="panel-heading">
        <h3 class="panel-title">Sign up</h2>
      </div>
      <%- arr_grade_select = 1.step(3, 0.25).to_a + [4.0, 5.0] %>
      <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-horizontal"}) do |f| %>
          <%= devise_error_messages! %>

          <div class="form-group">
            <%= f.label :student_number, class: "col-sm-4 control-label" %>
            <div class="col-sm-8">
              <%= f.text_field :student_number, class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :fullname, class: "col-sm-4 control-label" %>
            <div class="col-sm-8">
              <%= f.text_field :fullname, class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :gender, class: "col-sm-4 control-label" %>
            <div class="col-sm-8">
              <%=f.radio_button :gender, 'Male', :checked => true%>
              <%=  f.label :gender, 'Male', :value => 'male' %>
              <%=f.radio_button :gender, 'Female' %>
              <%=  f.label :gender, 'Female', :value => 'female' %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :age, class: "col-sm-4 control-label" %>
            <div class="col-sm-8">
              <%= f.select :age, User::ALLOWED_AGE, html: {class: 'chosen-select form-control'} %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :course , class: "col-sm-4 control-label" %>
            <div class="col-sm-8">
              <%= f.select :course, User::COURSES, class: "form-control select-course" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :yr_level , class: "col-sm-4 control-label" %>
            <div class="col-sm-8">
              <%= f.select :yr_level, User::YR_LEVEL, class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :section , class: "col-sm-4 control-label" %>
            <div class="col-sm-8">
              <%= f.select :section, Hash[User::SECTION.collect{|v| [v, v]}], class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :schedule , class: "col-sm-4 control-label" %>
            <div class="col-sm-8">
              <%= f.select :schedule, User::SCHEDULE, class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :prog_1 , class: "col-sm-4 control-label" %>
            <div class="col-sm-8">
              <%= f.select :prog_1, arr_grade_select.collect{|n| [n, n]}, class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :prog_2 , class: "col-sm-4 control-label" %>
            <div class="col-sm-8">
              <%= f.select :prog_2, arr_grade_select.collect{|n| [n, n]}, class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :prog_3 , class: "col-sm-4 control-label" %>
            <div class="col-sm-8">
              <%= f.select :prog_3, arr_grade_select.collect{|n| [n, n]}, class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :username , class: "col-sm-4 control-label" %>
            <div class="col-sm-8">
             <%= f.text_field :username, class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :password , class: "col-sm-4 control-label" %>
            <div class="col-sm-8">
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation , class: "col-sm-4 control-label" %>
            <div class="col-sm-8">
              <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
            </div>
          </div>

          <div class="form-group row">
            <div class="col-md-4 col-md-offset-4">
              <%= f.submit "Sign up", class: "btn btn-success btn-lg btn-block" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>